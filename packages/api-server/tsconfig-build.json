{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "moduleResolution": "Node",
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": [
    "tests"
  ]
}
