{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/tests/*": ["tests/*"],
      "@/*": ["src/*"]
    },
    "moduleResolution": "Node",
    "strictNullChecks": true
  },
  "include": ["src", "tests"],
  "exclude": []
}
